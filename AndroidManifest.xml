<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deviceyun.devicemanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceSettingsActivity"
            android:label="@string/title_activity_device_detail" >
        </activity>
        <activity
            android:name=".UserSettingsActivity"
            android:label="@string/title_activity_user_settings" >
        </activity>
        <activity
            android:name=".DeviceDetailActivity"
            android:label="@string/title_activity_device_detail" >
        </activity>
        <activity
            android:name=".DeviceConfigurationActivity"
            android:label="@string/title_activity_device_configuration" >
        </activity>
        <activity
            android:name=".operation_activity.IrTransmitterActivity"
            android:label="@string/title_activity_ir_transmitter" >
            <intent-filter>
                <action android:name="com.driverstack.devicemanager.intent.action.OPERATE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="generic/IrTransmitter" />
            </intent-filter>
        </activity>
        <activity
            android:name=".operation_activity.SwitchActivity"
            android:label="@string/title_activity_switch" >
            <intent-filter>
                <action android:name="com.driverstack.devicemanager.intent.action.OPERATE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="generic/ElectricitySwitch" />
                <data android:mimeType="generic/LegacyOnOffDevice" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login1" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>